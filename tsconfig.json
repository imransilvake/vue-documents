{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"useDefineForClassFields": true,
		"types": ["vitest/globals"]
	},
	"include": ["src"]
}
